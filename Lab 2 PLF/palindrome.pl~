reverseRec(0, Rev, Rev) :- !.

reverseRec(N, Rev, Result) :-
    Rev_ is Rev * 10 + N mod 10,
    N_ is N div 10,
    reverseRec(N_, Rev_, Result).

reverse(N, N) :-
    N < 10,
    !.

reverse(N, Rev) :-
    reverseRec(N, 0, Rev).

reverseDirect(N, 0) :-
    N < 10,
    !.

isPalindrome(N) :-
    N < 10,
    !.

isPalindrome(N) :-
    reverse(N, Rev),
    N == Rev. % N = Rev

palindromes([], 0) :- !.
palindromes([H|[]], 0) :-
    \+ isPalindrome(H),
    !.
palindromes([_], 1) :- !.


palindromes([H|T], Cont) :-
    isPalindrome(H),
    !,
    palindromes(T, Cont_),
    Cont is Cont_ + 1.
palindromes([_|T], Cont) :-
    palindromes(T, Cont).









